apiVersion: v1beta4
baseDomain: {{ domain }}
metadata:
  name: {{ cluster_name }}
networking:
  networkType: OVNKubernetes
  machineCIDR: 192.168.100.0/24
compute:
- name: worker
  replicas: 0
controlPlane:
  name: master
  replicas: 1
platform:
  none: {}
BootstrapInPlace:
  InstallationDisk: /dev/vda
pullSecret: '{{cluster.pullSecret}}'
sshKey: '{{ sshKey }}'
